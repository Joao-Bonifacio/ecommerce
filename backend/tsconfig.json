{
  "compilerOptions": {
    "module": "commonjs",

    //"declaration": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    "sourceRoot": "/",
    "paths": {
      "@/*": ["./src/*"],
      "@/infra*": ["./src/infra*"],
      "@/prisma*": ["./prisma*"],
      "@/test*": ["./test*"],
      "@/error*": ["./error*"]
    },

    "types": ["vitest/globals", "multer"],
    "inlineSources": true
  }
}